FROM alpine/jmeter

USER root

# Use Alpine package manager (apk)
RUN apk add --no-cache curl unzip

# Download MongoDB Java driver jars
RUN curl -L https://repo1.maven.org/maven2/org/mongodb/mongodb-driver-sync/5.5.0/mongodb-driver-sync-5.5.0.jar -o /opt/apache-jmeter-5.6.3/lib/ext/mongodb-driver-sync-4.11.1.jar && \
    curl -L https://repo1.maven.org/maven2/org/mongodb/bson/5.5.0/bson-5.5.0.jar -o /opt/apache-jmeter-5.6.3/lib/ext/bson-4.11.1.jar && \
    curl -L https://repo1.maven.org/maven2/org/mongodb/mongodb-driver-core/5.5.0/mongodb-driver-core-5.5.0.jar -o /opt/apache-jmeter-5.6.3/lib/ext/mongodb-driver-core-4.11.1.jar

# USER jmeter

# FROM alpine/jmeter

# # Install MongoDB plugin
# ADD curl -L https://github.com/jolestar/jmeter-mongodb-plugin/raw/mvn-repo/com/jolestar/jmeter-mongodb-plugin/0.4/jmeter-mongodb-plugin-0.4.jar -o /opt/apache-jmeter-5.6.3/lib/ext/ 

